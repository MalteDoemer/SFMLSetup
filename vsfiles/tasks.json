{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "options": {
        "shell": {
            "executable": "cmd.exe",
            "args": [
                "/d",
                "/c"
            ]
        }
    },
    "tasks": [
        {
            "label": "c++ build",
            "group": "build",
            "type": "shell",
            "command": ".vscode\\build.bat",
            "args": [
                "${workspaceFolderBasename}.exe"
            ],
            "dependsOn": [
                "clean bin",
                "clean obj"
            ],
            //"problemMatcher": "$msCompile"
            "problemMatcher": []
        },
        {
            "label": "clean bin",
            "group": "build",
            "type": "shell",
            "command": "del /q bin",
            "presentation": {
                "echo": false,
                "reveal": "never",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "clean obj",
            "group": "build",
            "type": "shell",
            "command": "del /q obj",
            "presentation": {
                "echo": false,
                "reveal": "never",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": false
            },
            "problemMatcher": []
        }
    ]
}